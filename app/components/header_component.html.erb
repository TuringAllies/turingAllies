<div class="d-flex flex-column">
  <div class="border border-1 d-flex justify-content-between align-items-center pt-1">
    <div class="d-flex align-items-center">
      <%= image_tag 'gears.jpg', class: "responsive-image" %>
      <h1 class=""><%= link_to "Turing Allies", root_path, id: "brand-logo", class: "text-decoration-none" %></h1>
    </div>
    <div class="border border-1 d-flex flex-column align-items-center">
      <% if @current_user %>
        hello <%= @current_user.first_name %>
        <div>
          <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete} %>
        </div>
      <% else %>
        <%= button_to "Login with Github", user_github_omniauth_authorize_path, class: "p-2", data: {turbo: false} %>
        <%= link_to "Log in", new_user_session_path %>
        <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>
